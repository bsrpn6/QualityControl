<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_integer_check.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Title and Description Views -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Check Title" />

        <!-- Description TextView -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Description" />

        <!-- Add other views for integer checks as needed -->

    </LinearLayout>

    <!-- Freeform Integer Input -->
    <EditText
        android:id="@+id/integerInputEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="0"
        android:imeOptions="actionDone"
        android:maxEms="4" />

</LinearLayout>
